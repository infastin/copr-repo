#!/usr/bin/elvish
# vim:ft=elvish

use str

var releases = [
	"fedora-36-x86_64"
	"fedora-37-x86_64"
	"fedora-rawhide-x86_64"
]

var pkg_name = (basename (pwd))

var releases_string = {
	each { |release| echo "-r"$release } $releases
}

copr-cli build-package thirdparty --name=$pkg_name ($releases_string) --enable-net=on
